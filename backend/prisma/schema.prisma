generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  Boards   Board[]
}

model Board {
  id     String @id @default(uuid())
  Users  User[]
  List   List[]
  userId String
}

model List {
  id      String @id @default(uuid())
  board   Board  @relation(fields: [boardId], references: [id])
  boardId String
  Task    Task[]
}

model Task {
  id        String    @id @default(uuid())
  list      List      @relation(fields: [id], references: [id])
  completed Boolean   @default(false)
  createdAt DateTime  @default(now())
  due       DateTime?
  title     String
  notes     String?
}
