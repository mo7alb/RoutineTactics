generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  password String
  Projects Project[]
  Comment  Comment[]
}

model Project {
  id     String @id @default(uuid())
  userId String
  admin  User   @relation(fields: [userId], references: [id])

  createdAt DateTime  @default(now())
  dueDate   DateTime?

  description String
  team        User[]
}

model Task {
  id          String   @id @default(uuid())
  description String
  createdAt   DateTime @default(now())
  dueDate     DateTime
}

model Comment {
  id     String @id @default(uuid())
  text   String
  admin  User   @relation(fields: [userId], references: [id])
  userId String
}
