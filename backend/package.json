	"dependencies": {
		"@prisma/client": "^4.13.0",
		"chai": "^4.3.7",
		"express": "^4.18.2",
		"mocha": "^10.2.0"
	},
	"devDependencies": {
		"@types/chai": "^4.3.5",
		"@types/chai-http": "^4.2.0",
		"@types/express": "^4.17.17",
		"@types/mocha": "^10.0.1",
		"@types/node": "^18.16.3",
		"chai-http": "^4.3.0",
		"prisma": "^4.13.0",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	},
	"scripts": {
		"build": "tsc",
		"start": "node .",
		"test": "mocha './test/**/*.ts'",
